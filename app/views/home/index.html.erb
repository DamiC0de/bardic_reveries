<% if user_signed_in? %>
  
  <div class="stories-container">
    <h2 id=stories>Latest public stories</h2>
    <%= render @stories %>
  </div>

  <div class="device-home">
    <%= link_to new_story_path, style: "text-decoration: none;" do %>
      <div class='newStory-nav-button'>
        <span class="button-text"><%= t('new_story') %></span>
      </div>
    <% end %>

    <%= link_to stories_path, style: "text-decoration: none;" do %>
      <div class='savedStories-nav-button'>
        <%= t('personnal_stories') %>
      </div>
    <% end %>    

    <%= link_to public_story_stories_path  , style: "text-decoration: none;" do %>
      <div class='storyPublic-nav-button'>
        <%= t('story_public') %>
      </div>
    <% end %>
  </div> 

<% else %>

  
<div class="introduction">  
  <h2>Bienvenue sur</h2> 
  <div class="logo"></div> 

  <div class="story-card">     
    <p>"Bardic Reveries" is an application for creating personalized stories for children, based on GPT's API. It creates stories tailored to each child's preferences and age, stimulating their imagination while providing educational entertainment.</p>
    <br><p>Here, each user is at the helm of his or her own narrative journey. The application offers a range of customization options, from story theme to character names, from the age of the child to adapt the vocabulary, and even the length of the story. To start generating stories, all you need to do is create an account and take out a subscription.</p>
    <p>Payment is made via an integrated secure payment module.</p>
  </div> 
</div>

<div class="device-loginSubscribe">
  <%= link_to new_user_session_path, style: "text-decoration: none;" do %>
      <div class='signIn-nav-button'>
        <%=t('login')%>
      </div>
    <% end %>

    <%= link_to new_user_registration_path, style: "text-decoration: none;" do %>
      <div class='signUp-nav-button'>
        <%=t('subscribe')%>
      </div>
    <% end %>

    <%= link_to root_path, style: "text-decoration: none;" do %>
      <div class='about-nav-button'>
        <%=t('about')%>
      </div>
    <% end %>

</div>
<% end %>



