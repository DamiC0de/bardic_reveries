<h1>Order#new</h1>
<p>Find me in app/views/order/new.html.erb</p>
<%= form_tag orders_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <span>Amount: 1.00 €</span>
      </label>
    </article><script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Achat d'un abonnement à nos histoires"
        data-amount="100"
        data-locale="fr">
    </script>
    <% end %>