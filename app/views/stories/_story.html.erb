<div class="story-summary">
  <h2>
    <%= link_to story.title, story_path(story), style: "text-decoration: none; color: inherit;" %>
  </h2>
  <table>
    <td>
      <p><%=t('creation_story')%> <%= story.created_at.to_date %><%if (story.user).pseudo %> by <%=(story.user).pseudo%> <%end%></p>
    </td>
    <td>
      <% if story.language == "French"%> <div id="fr"></div> 
      <%else%>
        <% if story.language == "English" %> <div id="uk"></div><%end%>
      <%end%>
    </td>
  </table>
  <% if current_user == story.user or current_user.is_admin%>
    <%= link_to t('delete_story'), story_path(story), method: :delete, data: { confirm: t('delete_confirm') }, class: "delete-button" %>
  <%end%>
</div>
