<div id="loading-screen" style="display: none;">
  <p>Histoire en cours de cr√©ation<span>.</span><span>.</span><span>.</span></p>
</div>

<div class="form-container">
  <%= form_for @story, html: { class: 'form-box' } do |f| %>
    <div class="field">
      <%= f.label t('theme') %>
      <%= f.select :theme, ["Fairy Tales", "Sci-Fi", "Dongeon and Dragons"], {}, { required: true } %>
    </div>
    
    <div class="field">
      <%= f.label t('age') %>
      <%= f.number_field :age, required: true, min: 1, step: 1 %>
    </div>

    
    <div class="field">
      <%= f.label t('main_character') %>
      <%= f.text_field :first_character, required: true %>
    </div>

    <div class="field">
      <%= f.label t('second_character') %>
      <%= f.text_field :secondary_character, required: true %>
    </div>

    <div class="field">
    <%= f.label t('fav_object') %>
    <%= f.text_field :fav_object, required: true, pattern: "[^0-9]*" %>
  </div>
  
  <div class="field">
    <%= f.label t('public story ?') %>
    <%= f.select :is_public, ["true", "false"], {}, { required: true } %>
  </div>
    <div class="actions">
      <%= f.submit "Generate History", class: 'submit-button' %>
    </div>
  <% end %>
</div>
